@model UserImagesWeb.Models.ImageUpdateViewModel

@{
    ViewBag.Title = "Редактирование аватарки";
}
<form asp-action="Edit" asp-controller="Image" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />
    <p>
        <label>Имя</label>
        <input name="Name" class="form-control" asp-for="Name" />
    </p>
    <p>
        <img style='width:130px; height:100px;' src="data:image/jpeg;base64,@(Convert.ToBase64String(Model.Image))" />
    </p>
    <p>
        <label>Аватар</label>
        <input name="Avatar" type="file" class="form-control" asp-for="Avatar" />
    </p>
    <p>
        <label>Email Пользователя</label>
        <input name="UserEmail" class="form-control" asp-for="UserEmail" />
    </p>
    <p>
        <input type="submit" value="Сохранить" />
    </p>
</form>