@model IEnumerable<UserImagesData.Image>


@{
    ViewData["Title"] = "Фотографии";
}

<h2>Фотографии для утверждения</h2>

<p>
    <a asp-action="Create">Добавить фото</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Avatar)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.User.UserName)
                </td>
                <td>
                    <img style='width:130px; height:100px;' src="data:image/jpeg;base64,@(Convert.ToBase64String(item.Avatar))" />
                </td>
                <td>
                    <a asp-action="ApproveImage" asp-route-id="@item.Id">Одобрить</a> |
                    <a asp-action="DeleteImage" asp-route-id="@item.Id">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>
